<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      .employee-card {
        width: 45%;
        border: 1px solid #000;
        padding: 10px;
        margin: 10px;
        display: inline-block;
        vertical-align: top;
        page-break-inside: avoid;
      }

      h3 {
        margin: 0 0 10px 0;
      }

      .page-break {
        page-break-after: always;
      }
    </style>
  </head>
  <body>
    <% employees.forEach((emp, index) => { %>

    <div class="employee-card">
      <h3><%= emp.name %></h3>
      <p>Position: <%= emp.position %></p>
      <p>Salary Rate: <%= emp.salaryRate %></p>
      <p>Cash Advance: <%= emp.cashAdvance %></p>
      <p>CA Deduction: <%= emp.caDeduction %></p>
      <p>CA Balance: <%= emp.caBalance %></p>
      <p>Net Salary: <%= emp.netSalary %></p>
      <p>Total Salary: <%= emp.totalSalary %></p>
    </div>

    <% if ((index + 1) % 4 === 0) { %>
    <div class="page-break"></div>
    <% } %> <% }) %>
  </body>
</html>
